FROM python:3.11-slim

WORKDIR /app

# install cron and other needed packages, then install python deps
COPY requirements.txt .
RUN apt-get update \
	&& apt-get install -y --no-install-recommends cron \
	&& pip install --no-cache-dir -r requirements.txt \
	&& rm -rf /var/lib/apt/lists/*

# app code and scheduler
COPY ./app ./app
COPY ./migrations ./migrations
COPY ./static ./static
COPY ./schedule.py ./schedule.py

# add a cron file to run schedule.py daily at midnight and log output
# format: minute hour day month weekday user command
RUN echo "0 0 * * * root /usr/local/bin/python /app/schedule.py >> /var/log/schedule.log 2>&1" > /etc/cron.d/podpulse_schedule \
	&& chmod 0644 /etc/cron.d/podpulse_schedule \
	&& touch /var/log/schedule.log

# copy entrypoint script which starts cron and then uvicorn
COPY ./docker_entrypoint.sh /usr/local/bin/docker_entrypoint.sh
RUN chmod +x /usr/local/bin/docker_entrypoint.sh

EXPOSE 8000

CMD ["/usr/local/bin/docker_entrypoint.sh"]
